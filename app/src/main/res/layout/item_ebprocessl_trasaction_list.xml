<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:padding="@dimen/app_min_padding"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView_ticketNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_min_margin"
                android:layout_marginLeft="@dimen/app_normal_margin"
                android:layout_weight="1"
                android:text="TKT_1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_DateOfRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_normal_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Date: dd/mmm/yyyy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView_SiteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_normal_margin"
                android:layout_weight="1"
                android:text="Site Name: " />

            <TextView
                android:id="@+id/textView_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_normal_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_BillIssueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_normal_margin"
                    android:layout_weight="1"
                    android:text="Bill Issue Date: " />

                <TextView
                    android:id="@+id/textView_BillDueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_normal_margin"
                    android:layout_weight="1"

                    android:text="Bill Due Date: " />

                <TextView
                    android:id="@+id/textView_BillGrossAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_normal_margin"
                    android:layout_weight="1"

                    android:text="Gross Amt: " />

                <TextView
                    android:id="@+id/textView_ModeOfPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_normal_margin"
                    android:layout_weight="1"

                    android:text="Mode Of Payment: 00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_status"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/app_normal_margin"
                    android:src="@drawable/receipt"
                    android:visibility="visible"></ImageView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
