<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.UserProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/profile_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/app_big_margin"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/applogo" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Venkatesh Prabhu"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="venkatesh.prabhu@gmail.com"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="16dp" />

                    </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@color/colorWhite"
                android:orientation="vertical">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/app_big_margin"
                    android:layout_marginLeft="@dimen/app_normal_margin"
                    android:layout_marginRight="@dimen/app_normal_margin">

                    <ImageView
                        android:id="@+id/userProfile_imageView_email"
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:clickable="true"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_mail_outline_red_24dp" />

                    <TextView
                        android:id="@+id/userProfile_textView_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/userProfile_imageView_email"
                        android:paddingLeft="@dimen/app_normal_padding"
                        android:text="E-MAIL ID" />

                    <TextView
                        android:id="@+id/userProfile_textView_emailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userProfile_textView_email"
                        android:layout_marginBottom="@dimen/app_big_margin"
                        android:layout_toRightOf="@+id/userProfile_imageView_email"
                        android:paddingLeft="@dimen/app_normal_padding"
                        android:text="venkatesh.prabhu@gmail.com"
                        android:textColor="#2196F3" />


                    <ImageView
                        android:id="@+id/userProfile_imageView_mobile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/userProfile_textView_emailText"
                        android:clickable="true"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_settings_cell_red_24dp" />

                    <TextView
                        android:id="@+id/userProfile_textView_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userProfile_textView_emailText"
                        android:layout_toRightOf="@+id/userProfile_imageView_mobile"
                        android:paddingLeft="@dimen/app_normal_padding"
                        android:text="Mobile" />

                    <TextView
                        android:id="@+id/userProfile_textView_mobileText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userProfile_textView_mobile"
                        android:layout_marginBottom="@dimen/app_big_margin"
                        android:layout_toRightOf="@+id/userProfile_imageView_mobile"
                        android:paddingLeft="@dimen/app_normal_padding"
                        android:text="8600328869"
                        android:textColor="#2196F3" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>