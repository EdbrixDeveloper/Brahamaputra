<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/loginbg">


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.9">

                <FrameLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <ImageView
                        android:layout_width="270dp"
                        android:layout_height="230dp"
                        android:src="@drawable/mahindra_rise_logo_white"
                        android:layout_marginTop="60dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="We provide service"
                        android:textColor="@color/gray"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:layout_gravity="bottom"
                        android:textStyle="italic"
                        android:visibility="gone"/>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/forgotPassword_editText_mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:layout_marginLeft="@dimen/app_big_margin"
                    android:layout_marginRight="@dimen/app_big_margin"
                    android:drawableLeft="@drawable/ic_action_contact_mobile"
                    android:drawablePadding="@dimen/app_normal_padding"
                    android:backgroundTint="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:layout_centerInParent="true"
                    android:maxLength="10"
                    android:textColor="@color/colorWhite"/>

                <Button
                    android:id="@+id/forgotPassword_button_submit"
                    android:layout_below="@id/forgotPassword_editText_mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/app_big_margin"
                    android:layout_marginRight="@dimen/app_big_margin"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:text="Submit"
                    android:background="@color/colorWhite"
                    android:textColor="@color/red"
                    android:textAllCaps="false"
                    android:textSize="16dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>



