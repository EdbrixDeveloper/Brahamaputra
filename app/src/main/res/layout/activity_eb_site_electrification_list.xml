<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EbSiteElectrificationList">

    <ExpandableListView
        android:id="@+id/listViewEbSiteElectrification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listheader="@layout/item_eb_site_electrification_list_seprator"
        tools:listitem="@layout/item_eb_site_electrification_list" />

    <TextView
        android:id="@+id/txtNoTicketFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No ticket found."
        android:visibility="gone" />

</RelativeLayout>

